<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/groupStylegray_51"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.SvDangKiPhongShowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="@dimen/_20pxh"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_back1"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txt_qlp_bql"
                    style="@style/txtInterbold20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60pxh"
                    android:layout_weight="0.9"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="ĐĂNG KÍ PHÒNG Ở" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:gravity="end"
                android:orientation="horizontal">


                <LinearLayout
                    style="@style/groupStylebluegray_800cornerRadius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.14"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="@dimen/_30pxh"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rectangle_bg_bluegray_800_radius_7_35"
                        android:paddingHorizontal="@dimen/_3pxh"
                        android:paddingVertical="@dimen/_3pxv"
                        android:scaleType="centerCrop"
                        android:src="@drawable/outline_home_24"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/txtInterbold20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_26pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_marginEnd="@dimen/_26pxh"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="THÔNG TIN PHÒNG" />

            <TextView
                android:id="@+id/txt_loai_phong"
                style="@style/txtInterregular20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_50pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loai_phong" />

            <TextView
                android:id="@+id/txt_phong"
                style="@style/txtInterregular20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_50pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/phong" />

            <TextView
                android:id="@+id/txt_so_luong"
                style="@style/txtInterregular20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_50pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/so_luong" />

            <TextView
                android:id="@+id/txt_so_luong_toi_da"
                style="@style/txtInterregular20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_50pxh"
                android:layout_marginTop="@dimen/_16pxv"
                android:layout_marginEnd="@dimen/_50pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/so_luong" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_xac_nhan"
                style="@style/btnSolidRounded"
                android:layout_width="191dp"
                android:layout_height="@dimen/_36pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_50pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_13pxh"
                android:paddingTop="@dimen/_10pxv"
                android:paddingEnd="@dimen/_13pxh"
                android:paddingBottom="@dimen/_10pxv"
                android:singleLine="true"
                android:text="ĐĂNG KÍ" />

            <LinearLayout
                android:id="@+id/frame_xac_nhan"
                style="@style/groupStyleblue_100cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_33pxv"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCmunthmv"
                    style="@style/txtInterregular16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_6pxv"
                    android:layout_marginEnd="@dimen/_35pxh"
                    android:ellipsize="none"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="Có muốn đăng kí vào phòng này không?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_35pxh"
                    android:layout_marginTop="@dimen/_33pxv"
                    android:layout_marginEnd="@dimen/_34pxh"
                    android:layout_marginBottom="@dimen/_19pxv"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_dong_y"
                        style="@style/txtSolidRounded"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="none"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2pxv"
                        android:paddingBottom="@dimen/_5pxv"
                        android:singleLine="true"
                        android:text="@string/DONG_Y" />


                    <TextView
                        android:id="@+id/btn_huy"
                        style="@style/txtSolidRounded"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_108pxh"
                        android:layout_weight="0.5"
                        android:ellipsize="none"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2pxv"
                        android:paddingBottom="@dimen/_5pxv"
                        android:singleLine="true"
                        android:text="@string/huy" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

